<h2>lista de categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Criar nova categoria</button></a>

{{#each categorias}}
<div class="card mt-4">
    <div class="card-body">

   
    <h4>{{nome}}</h4>
    <small>Slug:{{slug}}</small>
    <small>Data de criação: {{date}}</small><br><br>
    <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-4">Editor categoria</button></a>
    <form action="/admin/categorias/deletar" method="POST">
        <input type="hidden" name="id" value ="{{_id}}">
        <button type="submit" class="btn btn-danger mt-2">Deletar</button>
    </form>
    </div>
    </div>
{{else}}
<h4><basefont>Nenhuma categoria registrada </basefont></h4>
{{/each}}