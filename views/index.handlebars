<div class="jumbotron">
  <h1 class="display-4">Bem vindo ao blog</h1>
  <p class="lead"></p>
  <hr class="my-4">
  <p>Blog desenvolvido com Node.Js e mongo.db</p>
  <p class="lead">
    <a class="btn btn-primary btn-lg" href="#" role="button">Crie uma conta</a>
  </p>
</div>

<hr>
<h2>Postagens recentes:</h2>

{{#each postagens}}
<div class="card">
    <div class="card-body"> 
      
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
        <hr>
         <small>Categoria:{{categoria.nome}}</small><br>
      <small> Data de publicação:{{data}}</small>
       <hr>
       <h3>{{titulo}}</h3>
       <p>{{descricao}}</p>
    </div>
</div>
{{else}}
<H5>Nenhuma postagens</H5>

{{/each}}